    </LinearLayout>
    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    -->

    <LinearLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonDelete"
            android:text="@string/button_setting_button_delete"
            android:drawableStart="@drawable/ic_action_discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_discard" />
        <Button
            android:id="@+id/buttonAudition"
            android:text="@string/button_setting_button_audition"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_action_headphones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_headphones" />
    </LinearLayout>

 </LinearLayout>
