<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextTitle"
        android:hint="@string/button_setting_label_title_hint"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonFile"
        android:hint="@string/button_setting_button_file_hint"
        android:gravity="start|center_vertical"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewSelectDemoData"
        android:text="@string/select_demo_data_text"
        android:clickable="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewSoundEffectAlert"
        android:paddingTop="6dp"
        android:paddingBottom="12dp"
        android:text="@string/button_setting_se_info"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--
    <LinearLayout
        android:orientation="horizontal"
